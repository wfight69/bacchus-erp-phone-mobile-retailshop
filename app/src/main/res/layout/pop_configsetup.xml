<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDDDDD">
 
     <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center">   
     	
	 	<TextView  
	    	android:layout_width="fill_parent" 
	    	android:layout_height="50dp"
			android:layout_weight="-1"
			android:gravity="center"
	    	android:text="[---환경설정---]"
	    	android:textSize="16sp"
	    	android:textColor="#444444"
	    />
  	 </LinearLayout>
  
     <!-- 서버 접속URL  -->
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">   
     	
        <TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
	    	android:text="[접속서버]"
	    	android:textSize="16sp"
	        android:textColor="#444444"
	    />  	

       	<EditText
 			android:id="@+id/config_edtxt_conn_server"  
    		android:layout_width="170sp"
 			android:layout_height="50sp"   	
 			android:layout_marginRight="5sp"	
	    	android:textSize="11sp"/>  	    
    </LinearLayout>

	<!-- GPS거리 -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="[GPS거리]"
			android:textSize="16sp"
			android:textColor="#444444"
			/>

		<EditText
			android:id="@+id/config_edtxt_gps_distance"
			android:layout_width="50sp"
			android:layout_height="50sp"
			android:layout_marginRight="5sp"
			android:textSize="11sp"/>

		<TextView
			android:id="@+id/textView5"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="(Km)"
			android:textColor="#444444"
			/>
	</LinearLayout>

	<!-- AS접수콜 리프레쉬 타임 -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="[AS콜타임]"
			android:textSize="16sp"
			android:textColor="#444444"
			/>

		<EditText
			android:id="@+id/config_edtxt_as_call_time"
			android:layout_width="50sp"
			android:layout_height="50sp"
			android:layout_marginRight="5sp"
			android:textSize="11sp"/>

		<TextView
			android:id="@+id/textView5"
			android:layout_width="90dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="(분)"
			android:textColor="#444444"
			/>

	</LinearLayout>

	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">   
     	
        <TextView  
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
	    	android:text="[NFC음성사용]"
	    	android:textSize="16sp"
	        android:textColor="#444444"
	    />  
	      	          
  	   <CheckBox
       android:id="@+id/config_chkbox_nfc_voice_use_yn"
       android:layout_width="40dp"
       android:layout_height="30dp"
       android:layout_marginTop="10dip"
       android:layout_marginRight="5dp" />
  	       	    
    </LinearLayout>      

    
 	<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" 
            android:layout_marginTop="40dip"
            >

            <Button
                android:id="@+id/config_btnClose"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="닫기" />

            <Button
                android:id="@+id/config_btnSave"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="저장" />
   
        </LinearLayout>
 
    
</LinearLayout>
